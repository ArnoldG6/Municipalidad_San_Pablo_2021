<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">
    <servlet>
        <servlet-name>PlanServlet</servlet-name>
        <servlet-class>plan.services.PlanServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PlanManager</servlet-name>
        <servlet-class>plan.services.PlanManager</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>IncidenceServlet</servlet-name>
        <servlet-class>incidence.services.IncidenceServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginManager</servlet-name>
        <servlet-class>plan.login.LoginManager</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PlanServlet</servlet-name>
        <url-pattern>/API/PlanServlet/Retrieve/Planes</url-pattern>
        <url-pattern>/API/PlanServlet/Retrieve/Plan</url-pattern>
        <url-pattern>/API/PlanServlet/Retrieve/Plan/RemainingRisks</url-pattern>
        <url-pattern>/API/PlanServlet/Retrieve/PlanTypes</url-pattern>
        <url-pattern>/API/PlanServlet/Search</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>IncidenceServlet</servlet-name>
        <url-pattern>/API/IncidenceServlet/Retrieve/Incidencias</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PlanManager</servlet-name>
        <url-pattern>/API/PlanManager/Insert</url-pattern>
        <url-pattern>/API/PlanManager/Edit</url-pattern>
        <url-pattern>/API/PlanManager/Delete</url-pattern>
        <url-pattern>/API/PlanManager/Delete/Risk</url-pattern>
        <url-pattern>/API/PlanManager/Insert/Risk</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginManager</servlet-name>
        <url-pattern>/API/LoginManager/test</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
